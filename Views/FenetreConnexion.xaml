<Window x:Class="TP2_GLII.Views.FenetreConnexion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP2_GLII.Views"
        mc:Ignorable="d"
        Title="FenetreConnexion" Height="450" Width="800">
    <Grid>

                <!-- Image de fond floutée -->
                <Image Source="pack://application:,,,/Images/background_login.jpg"
               Stretch="Fill" Opacity="0.3"/>

                <!-- Formulaire de connexion -->
                <Border Background="#181818"
                CornerRadius="10"
                Padding="40"
                Width="350" Height="320"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Opacity="0.95">
                    <StackPanel>
                        <TextBlock Text="Connexion"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,25"
                           TextAlignment="Center"/>

                        <TextBox x:Name="txtEmail"
                         Height="35"
                         Margin="0,0,0,10"
                         Text="Adresse courriel"
                         FontSize="14"
                         Padding="10"/>

                        <PasswordBox x:Name="txtPassword"
                             Height="35"
                             Margin="0,0,0,20"
                             FontSize="14"
                             Padding="10"/>

                        <Button x:Name="BtnConnexion"
                        Content="Se connecter"
                        Background="#E50914"
                        Foreground="White"
                        BorderBrush="Transparent"
                        Height="40"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Margin="0,0,0,10"/>

                        <Button x:Name="BtnRetour"
                        Content="Retour"
                        Background="Transparent"
                        Foreground="White"
                        BorderBrush="Gray"
                        Height="35"
                        Cursor="Hand"/>
                    </StackPanel>
                </Border>
         


    </Grid>
</Window>
