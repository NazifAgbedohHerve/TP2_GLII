<Window x:Class="TP2_GLII.Views.FenetreConnexion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP2_GLII.Views"
        mc:Ignorable="d"
        Title="FenetreConnexion" Height="450" Width="800">

    <Grid>
            <Image Source="pack://application:,,,/Images/background_login.jpg"
               Stretch="Fill" Opacity="0.3"/>

            <Border Background="#181818"
                CornerRadius="10"
                Padding="40"
                Width="380"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Opacity="0.95">

                <StackPanel>
                    <TextBlock Text="Connexion"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="White"
                           TextAlignment="Center"
                           Margin="0,0,0,25"/>

                    <TextBlock Text="Nom d'usager" Foreground="LightGray"/>
                    <TextBox x:Name="txtNomUsager" Height="35" Margin="0,0,0,15"/>

                    <TextBlock Text="Mot de passe" Foreground="LightGray"/>
                    <PasswordBox x:Name="txtMotDePasse" Height="35" Margin="0,0,0,25"/>

                    <Button x:Name="BtnConnexion" Content="Se connecter"
                        Background="#E50914"
                        Foreground="White"
                        BorderBrush="Transparent"
                        Height="40"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Margin="0,0,0,10"/>

                    <Button x:Name="BtnRetour" Content="Retour"
                        Background="Transparent"
                        Foreground="White"
                        BorderBrush="Gray"
                        Height="35" Cursor="Hand"/>

                    <TextBlock Text="Pas encore membre ?"
                           Foreground="LightGray"
                           Margin="0,20,0,5"
                           TextAlignment="Center"/>
                    <Button x:Name="BtnInscription"
                        Content="Créer un compte"
                        Background="Transparent"
                        Foreground="#E50914"
                        BorderBrush="Transparent"
                        FontWeight="Bold"
                        Cursor="Hand"/>
                </StackPanel>
            </Border>
        </Grid>
    

</Window>
