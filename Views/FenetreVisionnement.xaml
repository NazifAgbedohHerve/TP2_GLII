<Window x:Class="TP2_GLII.Views.FenetreVisionnement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP2_GLII.Views"
        mc:Ignorable="d"
        Title="Visionnement" Height="600" Width="900" WindowStartupLocation="CenterScreen" Background="Black">
    <Grid>
            
        <StackPanel>
            <TextBlock x:Name="txtTitreFilm" FontSize="22" Foreground="White" FontWeight="Bold" Margin="0,0,0,20"/>
            <MediaElement x:Name="videoPlayer" Height="220" LoadedBehavior="Manual" UnloadedBehavior="Stop" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="BtnVisionner" Content="Visionner" Width="120" Height="36" Margin="10" Click="BtnVisionner_Click"/>
                <Button x:Name="BtnFermer" Content="Quitter" Width="120" Height="36" Margin="10" Click="BtnFermer_Click"/>
            </StackPanel>

            <TextBlock x:Name="txtMessage" Foreground="LightGreen" FontWeight="Bold" TextAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
    

</Window>
