<Window x:Class="TP2_GLII.Views.FenetreFicheFilm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP2_GLII.Views"
        mc:Ignorable="d"
        Title="Fiche du film"
Height="600" Width="900"
Background="DarkBlue"
WindowStartupLocation="CenterScreen"
ResizeMode="NoResize">

    <Border Padding="20" CornerRadius="10" Background="#2a2a2a" BorderBrush="Gray" BorderThickness="1">
            <StackPanel>
                <!-- Titre du film -->
                <TextBlock x:Name="txtTitreFilm"
                       FontSize="24" FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,10"
                       TextWrapping="Wrap"/>

                <!-- Année et catégorie -->
                <TextBlock x:Name="txtInfosFilm"
                       Foreground="LightGray"
                       FontSize="14"
                       Margin="0,0,0,15"
                       TextWrapping="Wrap"/>

                <!-- Synopsis -->
                <TextBlock Text="Synopsis :"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,5"/>
                <TextBlock x:Name="txtSynopsis"
                       FontSize="14"
                       Foreground="LightGray"
                       TextWrapping="Wrap"
                       Height="100"/>

                <!-- Liste des crédits -->
                <TextBlock Text="Distribution :" 
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,10,0,5"/>
                <ListBox x:Name="lstCredits"
                     Background="#303030"
                     Foreground="White"
                     BorderBrush="Gray"
                     BorderThickness="1"
                     Height="120"
                     FontSize="13"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"/>

                <!-- Boutons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="btnVisionner"
                        Content="Visionner"
                        Width="150" Height="40"
                        Margin="10"
                        Background="#0078D7"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="btnVisionner_Click"/>

                    <Button x:Name="btnFermer"
                        Content="Fermer"
                        Width="120" Height="40"
                        Margin="10"
                        Background="#444"
                        Foreground="White"
                        Click="btnFermer_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Window>
