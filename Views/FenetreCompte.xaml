<Window x:Class="TP2_GLII.Views.FenetreCompte"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP2_GLII.Views"
        mc:Ignorable="d"
        Title="FenetreCompte" Height="550" Width="850" WindowStartupLocation="CenterScreen"
Background="Black">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Text="Mon compte" FontSize="28" FontWeight="Bold" 
                   Foreground="White" HorizontalAlignment="Left"/>

        <!-- Contenu principal -->
        <StackPanel Grid.Row="1" Margin="0,20,0,0" Orientation="Vertical" VerticalAlignment="Top">
            <TextBlock x:Name="txtNomMembre" FontSize="20" Foreground="White" Margin="0,0,0,10"/>
            <TextBlock x:Name="txtCourriel" Foreground="LightGray" Margin="0,0,0,5"/>
            <TextBlock x:Name="txtSolde" FontSize="16" Foreground="LightGray" Margin="0,10,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,30">
                <Button x:Name="BtnApprovisionner" Content="Approvisionner"
                        Background="#E50914" Foreground="White" Width="150" Margin="0,0,15,0"/>
                <Button x:Name="BtnRembourser" Content="Demander remboursement"
                        Background="Transparent" BorderBrush="Gray" Foreground="White" Width="200"/>
            </StackPanel>

            <Separator Margin="0,10,0,10"/>

            <TextBlock Text="Abonnement actuel :" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,10"/>
            <TextBlock x:Name="txtAbonnement" Foreground="LightGray" FontSize="16" Margin="0,5,0,20"/>

            <StackPanel Orientation="Horizontal">
                <Button x:Name="BtnSuspendre" Content="Suspendre l’abonnement"
                        Background="#E50914" Foreground="White" Width="220" Margin="0,0,15,0"/>
                <Button x:Name="BtnHistorique" Content="Voir mes visionnements"
                        Background="Transparent" BorderBrush="Gray" Foreground="White" Width="220"/>
            </StackPanel>
        </StackPanel>

        <!-- Bouton retour -->
        <Button x:Name="BtnRetour" Content="Retour au catalogue"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Width="180" Height="35"
                Background="Transparent" BorderBrush="Gray" Foreground="White"/>
    </Grid>
</Window>
